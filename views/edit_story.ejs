<%- include('partials/_header', {title: "Edit Story - Open Book" , userName }); %>
  <div class="container centered">
    <main id="story-editor">
      <h2>Edit Story</h2>

      <!-- This will be the page where the users will write their new story -->
      <form method="POST" id="draft" action="/manage/update/<%= story.story_id %>">
        <label for="storyTitle">Story Title</label>
        <input type="text" name="storyTitle" id="story-title" value="<%= story.story_title %>">

        <label for="description">Description</label>
        <input type="text" name="description" value="<%= story.description %>">

        <div>
          <label for="category">Category</label>
          <select id="category" value="<%= story.category %>" name="category">
            <option value="Free Prose">Free Prose</option>
            <option value="Poetry">Poetry</option>
            <option value="Other">Other</option>
          </select>

          <label for="genre">Genre</label>
          <select id="genre" name="genre" value="<%= story.genre %>">
            <option value="Fiction">Fiction</option>
            <option value="Mystery">Mystery</option>
            <option value="Horror">Horror</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Science Fiction">Science Fiction</option>
            <option value="Other">Other</option>
          </select>

          <label for="rating">Rating</label>
          <select id="rating" value="<%= story.age_rating %>" name="rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="N/A">N/A</option>
          </select>
        </div>

        <label for="chapterTitle">Chapter Title</label>
        <input type="text" name="chapterTitle" value="<%= story.chapter_title %>">
        <%- include('partials/_text_editor', { body: story.body }) %>
        <div id="success" class="hidden notification">

        </div>
        <div id="fail" class="hidden notification">

        </div>
          <footer>
            <div>
              <p>Letter count: <span id="letter-counter">0</span></p>
              <p>Word count: <span id="word-counter">0</span></p>
            </div>
            <div>
              <button id="update-story">Update</button>
              <button id="discard-changes">Discard Changes</button>
            </div>
          </footer>

      </form>

    </main>
  </div>
  <script type="text/javascript" src="/scripts/stats.js"></script>
  <script type="text/javascript" src="/scripts/edit-story-actions.js"></script>
  <script>
  </script>

  <%- include('partials/_footer'); %>
