<%- include('partials/_header', {title: "New Story - Open Book" }); %>

  <div class="container centered">

    <main id="story-editor">
      <h2>New Story</h2>

      <!-- This will be the page where the users will write their new story -->
      <form method="POST" id="draft" action="/story/new">
        <div class="variations">
          <label for="storyTitle">Story Title:</label>
          <input type="text" name="storyTitle" id="story-title" autocomplete="off">

          <label for="description">Description:</label>
          <input type="text" name="description" autocomplete="off">

          <label for="chapterTitle">Chapter Title:</label>
          <input type="text" name="chapterTitle" autocomplete="off">

          <label for="category">Category:</label>
          <select name="category">
            <option value="Free Prose">Free Prose</option>
            <option value="Poetry">Poetry</option>
            <option value="Other">Other</option>
          </select>

          <label for="genre">Genre:</label>
          <select name="genre">
            <option value="Fiction">Fiction</option>
            <option value="Mystery">Mystery</option>
            <option value="Horror">Horror</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Science Fiction">Science Fiction</option>
            <option value="Other">Other</option>
          </select>

          <label for="rating">Rating:</label>
          <select name="rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="N/A">N/A</option>
          </select>
        </div>
        <%- include('partials/_text_editor', { body: "" }) %>
          <footer>
            <div>
              <p>Letter count: <span id="letter-counter">0</span></p>
              <p>Word count: <span id="word-counter">0</span></p>
            </div>
            <div class="action-buttons">
              <button id="save-story">Save</button>
              <button id="publish">Publish</button>
              <button id="discard-story">Discard</button>
            </div>
          </footer>
          <div id="success" class="hidden notification">

          </div>
          <div id="fail" class="hidden notification">

          </div>

      </form>

    </main>
  </div>
  <script type="text/javascript" src="/scripts/stats.js"></script>
  <script type="text/javascript" src="/scripts/new.js"></script>

  <%- include('partials/_footer'); %>
